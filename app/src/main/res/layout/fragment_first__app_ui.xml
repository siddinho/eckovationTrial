<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/aliciakeys"/>



    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alicia keys Singer"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textAlignment="center"
        android:layout_marginLeft="80dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/chat"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/chat"
            android:paddingTop="10dp"
            android:text="Chat"
            android:textColor="#727272"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/gallery"
            android:layout_weight="1"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/galcoloured"
            android:paddingTop="20dp"
            android:text="Gallery"
            android:textColor="#727272" />

        <Button
            android:id="@+id/info"
            android:layout_weight="1"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/location"
            android:paddingTop="20dp"
            android:text="Info"
            android:textColor="#727272" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/friends"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/friends"
            android:paddingTop="10dp"
            android:text="Friends"
            android:textSize="15sp"
            android:textColor="#727272"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/music"
            android:layout_weight="1"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/music"
            android:paddingTop="20dp"
            android:text="music"
            android:textColor="#727272" />

        <Button
            android:id="@+id/notification"
            android:layout_weight="1"
            android:layout_width="22dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/alarm"
            android:paddingTop="20dp"
            android:text="Notification"
            android:textSize="12dp"
            android:textColor="#727272" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
